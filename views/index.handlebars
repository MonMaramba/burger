<div class="container">

  <img src="assets/img/burger.png">
  <h1>Eat-Da-Burger!</h1>

  <div class="row">

    <div class="col-sm-6">
      <h2>Burgers to Eat!</h2>
      {{#each burgers}} {{#unless this.devoured}}
      <form id="update">
        <input type="hidden" name="devoured" value="true">
        <button class="btn btn-danger" id="devour" type="submit">Devour it!</button>
      </form>
      <div class="well">
        {{this.id}}. {{this.burger_name}}
      </div>
      {{/unless}} {{/each}}
    </div>

    <div class="col-sm-6">
      <h2>Burgers Devoured!</h2>
      {{#each burgers}} {{#if this.devoured}}
      <div class="well devoured">
        {{this.id}}. {{this.burger_name}}
      </div>
      {{/if}} {{/each}}
    </div>

  </div>

  <h2>Enter a famous burger that you want to eat</h2>

  <form id="burger_name">
    <textarea id="burger_name"></textarea>
    <button class="btn btn-warning" id="go" type="submit">Submit</button>
  </form>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script>
  $(document).ready(function () {
    $("#devour").on("click", function (event) {
      var id = $(this).data("id");
      var devourState = {
        devoured: 1
      }

      $.ajax("/api/burgers" + id, {
        type: "PUT",
        data: devourState,
      }).then(
        function () {
          console.log("devour state has changed to " + devourState)
          location.reload();
        }
      );

    });

    $("#go").on("click", function (event) {
      event.preventDefault();
      var newBurger = {
        burger_name: $("#burger_name").val().trim()
      }
      console.log(newBurger);      

      $.ajax("/api/burgers", {
        type: "POST",
        data: newBurger
    }).then(
      function() {
        console.log("New burger waiting to be eaten!");
        location.reload();
      }
    );
  });
  });
</script>